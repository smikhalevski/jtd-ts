{
  "name": "jtd-ts",
  "version": "1.0.0",
  "description": "The converter from JTD to TypeScript interfaces and validators.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib",
    "README.md"
  ],
  "scripts": {
    "build": "set -e; tsc; npm run rollup; npm run terser",
    "rollup": "rollup --exports default --input ./lib/index.js --file ./lib/index-cjs.js --format cjs",
    "terser": "terser --compress --mangle toplevel --mangle-props keep_quoted --output ./lib/index-cjs.js -- ./lib/index-cjs.js",
    "clean": "rm -rf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/jtd-ts.git"
  },
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/jtd-ts/issues"
  },
  "homepage": "https://github.com/smikhalevski/jtd-ts#readme",
  "jest": {
    "preset": "ts-jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/json-pointer": "^1.0.31",
    "jest": "^27.0.2",
    "rollup": "^2.50.5",
    "terser": "^5.7.0",
    "ts-jest": "^27.0.2",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "json-pointer": "^0.6.1"
  }
}
