{
  "name": "@jtdc/compiler",
  "version": "1.0.0",
  "description": "JTDc parser and compiler.",
  "main": "./lib/index-cjs.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "sideEffects": false,
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --project ./tsconfig.build.json && npm run rollup",
    "rollup": "rollup --external @smikhalevski/codegen,@jtdc/types,change-case-all,json-pointer --input ./lib/index.js --file ./lib/index-cjs.js --format cjs --plugin @rollup/plugin-node-resolve",
    "clean": "rimraf ./lib",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smikhalevski/jtdc.git"
  },
  "keywords": [
    "typescript",
    "json-schema",
    "validator",
    "guard",
    "ts",
    "compile",
    "narrowing",
    "jtd"
  ],
  "author": "Savva Mikhalevski <smikhalevski@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smikhalevski/jtdc/issues"
  },
  "homepage": "https://github.com/smikhalevski/jtdc#readme",
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            151001
          ]
        }
      }
    }
  },
  "dependencies": {
    "@jtdc/types": "^1.0.0",
    "@smikhalevski/codegen": "^2.0.1",
    "change-case-all": "^1.0.14",
    "json-pointer": "^0.6.1",
    "tslib": "^2.3.1"
  },
  "devDependencies": {
    "@jtdc/jtd-dialect": "^1.0.0",
    "@types/json-pointer": "^1.0.31"
  }
}
