{
  "compilerOptions": {
    "moduleResolution": "Node",
    "strict": true,
    "target": "ES5",
    "module": "ES6",
    "lib": [
      "ES2021"
    ],
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@jtdc/*": [
        "./packages/*/src/main"
      ]
    }
  },
  "include": [
    "./*",
    "./packages/*/src/main/**/*"
  ]
}
