{
  "account": {
    "properties": {
      "user": {
        "ref": "user"
      },
      "stats": {
        "properties": {
          "visitCount": {
            "type": "int32"
          }
        }
      }
    },
    "optionalProperties": {
      "roles": {
        "metadata": {
          "comment": "User is guest if no roles are provided"
        },
        "elements": {
          "ref": "role"
        }
      }
    }
  },
  "role": {
    "enum": ["admin", "guest"]
  }
}
